<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book.id), method: :delete, remote: true do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book.id), method: :post, remote: true do %>
    ♡<%= book.favorites.count %>
  <% end %>
<% end %>